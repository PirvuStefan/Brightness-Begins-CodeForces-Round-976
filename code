
#include <iostream>
#include <algorithm>
#include<cmath>
using namespace std;
long long count(long long b) {
    return floor(sqrtl(b));
}
int main() {
    long long t;
    cin>>t;
     //The final state of ð‘–th bulb (on or off) is independent of ð‘›
    //The final state of the ð‘–th bulb tells us about the parity of number of divisors of ð‘–
                 //  even => off
                //   odd  => on
    // only perfect squares have the parity even
    for(int p=1;p<=t;p++){
        long long k;
        cin>>k;
        long long n = k + 1;

        long long number = n - count(n); //on bulbs
                                //count(n) = off bulbs
            //k - number    how many we need to reach k == n
            
                n = n + (k - number) + countSquares(n+1,n+k-number);
        cout<<n<<"\n";
        
    }
    return 0;
}

